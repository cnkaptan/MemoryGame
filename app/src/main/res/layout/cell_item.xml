<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.cnkaptan.memorygame.utils.SquareView
        android:id="@+id/cell_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@id/cell_text"
        android:layout_alignTop="@id/cell_text"
        android:layout_alignRight="@id/cell_text"
        android:layout_alignLeft="@id/cell_text"
        />
</RelativeLayout>